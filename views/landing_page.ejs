<%- include('partials/header', { title: 'Welcome to SecureGuard' , page: 'landing' }) %>
  <% if (typeof page !=='undefined' && page !=='landing' ) { %>
    <%- include('partials/sidebar', { page: 'landing' }) %>
      <% } %>

        <style>
          .landing-container {
            background: #0f172a;
            color: white;
            display: flex;
            min-height: 100vh;
            align-items: center;
            justify-content: center;
            gap: 3rem;
            padding: 0 5rem;
            width: full;
            margin-top: -2rem;

          }

          .left-side {
            width: 65%;
            display: flex;
            flex-direction: column;
            justify-content: center;

          }

          .left-side h2 {
            font-size: 3.2rem;
            line-height: 1.2;
            margin-bottom: 1rem;
            color: rgb(12, 207, 142);
          }

          .left-side p {
            color: #94a3b8;
            font-size: 1.2rem;
            margin-bottom: 2rem;
          }

          .btn-group {
            display: flex;
            gap: 2rem;
          }

          .btn {
            padding: 0.5rem 2rem;

            border-radius: 8px;
            text-decoration: none;
            transition: transform 0.2s, box-shadow 0.2s;
            font-size: 1.2rem
          }

          .btn-primary {
            background: #06b6d4;
            color: white;
          }

          .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(6, 182, 212, 0.4);
          }

          .btn-secondary {
            background: #334155;
            color: white;
          }

          .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(100, 115, 133, 0.4);
          }

          .right-side {
            width: 35%;
            display: flex;
            justify-content: center;
            align-items: center;
          }

          /* Flowchart */
          .flowchart {
            display: flex;
            flex-direction: column;
            gap: 2.2rem;
            position: relative;
          }

          .flow-step:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 20px rgba(16, 185, 129, 0.4);


          }

          .flow-step {
            background: #1e293b;
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;

            padding: 1rem 1.5rem;
            border-radius: 12px;
            text-align: center;
            position: relative;
            min-width: 180px;
            font-weight: 600;
            color: #fff;
          }

          .flow-step::after {
            content: '';
            position: absolute;
            width: 2px;
            height: 50px;
            background: #06b6d4;
            left: 50%;
            bottom: -50px;
            transform: translateX(-50%);
          }

          .flow-step:last-child::after {
            display: none;
          }

          .arrow {
            position: absolute;
            left: 50%;
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-top: 12px solid #06b6d4;
            transform: translateX(-50%);
            top: 125%;

          }

          @media (max-width: 1024px) {
            .landing-container {
              flex-direction: column-reverse;
              gap: 3rem;
              padding: 2rem 1rem;
            }

            .left-side {
              text-align: center;
            }

            .right-side {
              justify-content: center;
              align-items: flex-start;
            }
          }
        </style>

        <div class="landing-container">
          <div class="left-side">
            <h2>
              Train Yourself with <span style="color: cyan">SecureGuard</span> to Avoid Cyber Attcaks & Cyber Crimes
            </h2>
            <p>
              Learn to spot, analyze, and respond to phishing attempts in a fun and interactive way. Protect yourself
              and your organization from cyber threats.
            </p>
            <div class="btn-group">
              <a href="/login" class="btn btn-primary">Login</a>
              <a href="/signup" class="btn btn-secondary">Sign Up</a>
            </div>
          </div>

          <div class="right-side">
            <div class="flowchart">
              <div class="flow-step">
                Receive Email
                <div class="arrow"></div>
              </div>
              <div class="flow-step">
                Analyze Links & Attachments
                <div class="arrow"></div>
              </div>
              <div class="flow-step">
                Verify & Decide
                <div class="arrow"></div>
              </div>
              <div class="flow-step">
                Learn & Reinforce
              </div>
            </div>
          </div>
        </div>

        <%- include('partials/footer') %>