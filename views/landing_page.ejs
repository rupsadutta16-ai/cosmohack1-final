<%- include('partials/header', { title: 'Welcome to SecureGuard' , page: 'landing' }) %>
  <% if (typeof page !=='undefined' && page !=='landing' ) { %>
    <%- include('partials/sidebar', { page: 'landing' }) %>
      <% } %>

        <main class="w-full min-h-[calc(100vh-4rem)] flex items-center justify-center p-4 sm:p-8 lg:p-20 -mt-4">
          <div class="max-w-7xl w-full grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">

            <!-- Left Side Content -->
            <div class="flex flex-col text-center lg:text-left space-y-6">
              <h2 class="text-4xl sm:text-5xl font-extrabold leading-tight text-slate-900 dark:text-white">
                Train Yourself with
                <span class="text-cyan-500 dark:text-cyan-400">SecureGuard</span>
                to Avoid Cyber Attacks & Crimes
              </h2>
              <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto lg:mx-0">
                Learn to spot, analyze, and respond to phishing attempts in a fun and interactive way. Protect
                yourself and your organization from cyber threats.
              </p>
              <div class="flex gap-4 justify-center lg:justify-start pt-4">
                <a href="/login"
                  class="px-8 py-3 rounded-lg bg-cyan-500 hover:bg-cyan-600 text-white font-semibold text-lg shadow-lg shadow-cyan-500/30 transition-all transform hover:-translate-y-1">
                  Login
                </a>
                <a href="/signup"
                  class="px-8 py-3 rounded-lg bg-slate-200 dark:bg-slate-700 hover:bg-slate-300 dark:hover:bg-slate-600 text-slate-900 dark:text-white font-semibold text-lg transition-all transform hover:-translate-y-1">
                  Sign Up
                </a>
              </div>
            </div>

            <!-- Right Side Flowchart -->
            <div class="flex flex-col items-center justify-center space-y-4">

              <!-- Step 1 -->
              <div
                class="w-64 p-4 rounded-xl bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 shadow-xl text-center font-bold text-slate-800 dark:text-white relative group transition-all hover:scale-105 hover:shadow-cyan-500/20 hover:border-cyan-400">
                Receive Email
              </div>

              <!-- Arrow -->
              <div class="text-cyan-500 dark:text-cyan-400 animate-bounce">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3">
                  </path>
                </svg>
              </div>

              <!-- Step 2 -->
              <div
                class="w-64 p-4 rounded-xl bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 shadow-xl text-center font-bold text-slate-800 dark:text-white relative group transition-all hover:scale-105 hover:shadow-cyan-500/20 hover:border-cyan-400">
                Analyze Links & Attachments
              </div>

              <!-- Arrow -->
              <div class="text-cyan-500 dark:text-cyan-400 animate-bounce">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3">
                  </path>
                </svg>
              </div>

              <!-- Step 3 -->
              <div
                class="w-64 p-4 rounded-xl bg-white dark:bg-slate-800 border-2 border-slate-200 dark:border-slate-700 shadow-xl text-center font-bold text-slate-800 dark:text-white relative group transition-all hover:scale-105 hover:shadow-cyan-500/20 hover:border-cyan-400">
                Verify & Decide
              </div>

              <!-- Arrow -->
              <div class="text-cyan-500 dark:text-cyan-400 animate-bounce">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3">
                  </path>
                </svg>
              </div>

              <!-- Step 4 -->
              <div
                class="w-64 p-4 rounded-xl bg-gradient-to-r from-cyan-500 to-blue-500 text-white shadow-xl text-center font-bold relative group transition-all hover:scale-105 hover:shadow-cyan-500/40">
                Learn & Reinforce
              </div>

            </div>
          </div>
        </main>

        <%- include('partials/footer') %>